<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        
        <record id="board_fg_sale_form" model="ir.ui.view">
            <field name="name">board.fg_sale.form</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="业务部工作台">
                    <board style="1-1">
                        <column>
                            <action name="%(action_fg_sale_price_protection_tree_view)d" string="有效价格保护单"/>
                            <action name="%(action_fg_sale_order_draft_2)d" creatable="true" string="今日未审核"/>
                        </column>
                        <column>
                            <action name="%(action_fg_sale_order_report_daily_source_tree_view_2)d" string="10天销售统计"/>
                        </column>
                    </board>
                </form>
            </field>
        </record>
        
        <record id="open_board_fg_sale" model="ir.actions.act_window">
            <field name="name">业务部工作台</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="board_fg_sale_form"/>
        </record>
        
        <menuitem
            id="menu_fg_sale" action="open_board_fg_sale" name="业务开单" />
    </data>
</openerp>